<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"	
	         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MateuszDobrowolski.UI.Views.GameDetailsView">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding ID}"></TextBlock>
            <TextBlock Text="{Binding Name}"></TextBlock>
            <Button Command="{ Binding EditGameCommand }">Edit</Button>
            <Button Command="{ Binding DeleteGameCommand }">Delete</Button>
            <Button Command="{ Binding GoToListCommand }">Back to List</Button>
        </StackPanel>
    </Grid>
</Page>
