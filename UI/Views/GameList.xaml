<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"	
	         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MateuszDobrowolski.UI.Views.GameList"
             xmlns:viewmodels="clr-namespace:MateuszDobrowolski.UI.ViewModels">
    <Page.DataContext>
        <viewmodels:GameListViewModel />
    </Page.DataContext>

    <Grid>
        <DockPanel>
            <ListBox Name="GamesListBox" DockPanel.Dock="Left" ItemsSource="{Binding Games}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Name="GameListItem">
                            <TextBlock Text="{Binding ID}" MinWidth="20" />
                            <TextBlock Text="{Binding Name}" MinWidth="50"/>
                            <TextBlock Text="{Binding FirstReleaseYear}" MinWidth="50"/>
                            <Button  Command="{Binding ElementName=GamesListBox, Path=DataContext.ShowGameDetailsCommand }" CommandParameter="{Binding }">Szczegóły</Button>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Grid>
</Page>
